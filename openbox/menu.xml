<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>
					rxvt-unicode -bg black -fg white -sr -b 5 -fn &quot;xft:Inconsolata:pixelsize=14&quot;
				</execute>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<execute>
					pcmanfm
				</execute>
			</action>
		</item>
		<menu id="root-menu-111245" label="Web Browsers">
			<item label="Chromium">
				<action name="Execute">
					<execute>
						chromium-browser
					</execute>
				</action>
			</item>
			<item label="Firefox">
				<action name="Execute">
					<execute>
						/home/corey/apps/firefox/firefox
					</execute>
				</action>
			</item>
			<item label="Firefox Beta">
				<action name="Execute">
					<execute>
						/home/corey/apps/firefox_beta/firefox
					</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<!-- This requires the presence of the 'menu' package to work -->
		<menu id="root-menu-925513" label="Games">
			<item label="Revenge of the Titans">
				<action name="Execute">
					<execute>
						/opt/revengeofthetitans/revenge.sh
					</execute>
				</action>
			</item>
			<item label="Osmos">
				<action name="Execute">
					<execute>
						Osmos
					</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<item label="ObConf">
			<action name="Execute">
				<execute>
					obconf
				</execute>
			</action>
		</item>
		<item label="Reconfigure">
			<action name="Reconfigure"/>
		</item>
		<item label="Restart">
			<action name="Restart"/>
		</item>
		<separator/>
		<item label="Suspend">
			<action name="Execute">
				<execute>
					sudo /usr/sbin/pm-suspend
				</execute>
			</action>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<execute>
					sudo /sbin/shutdown -h now
				</execute>
			</action>
		</item>
		<item label="Reboot">
			<action name="Execute">
				<execute>
					sudo /sbin/shutdown -r now
				</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
